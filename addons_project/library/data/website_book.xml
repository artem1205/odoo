<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_books" model="website.menu">
        <field name="name">Books</field>
        <field name="url">/library</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>


    <template id="index" name="Rent a Book">
        <t t-call="website.layout">
            <t t-set="title"> Library copies</t>
            <div class="oe_structure">
                <div class="container">
                    <table class="table table-bordered table-striped table-hover text-center mt16 table-comparator "
                           style="table-layout:auto">
                        <thead>
                            <tr>
                                <td>
                                    Reference
                                </td>
                                <td>
                                    Name
                                </td>
                                <td>
                                    Status
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="books" t-as="book">
                                <tr onclick="wizard_open()">
                                    <td>
                                        <t t-esc="book.reference"/>
                                    </td>
                                    <td>
                                        <t t-esc="book.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="book.book_state"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

</odoo>